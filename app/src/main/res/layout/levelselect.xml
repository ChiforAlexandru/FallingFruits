<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundplain"
    tools:context=".LevelSelect"
    android:weightSum="8">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_weight="2"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/level1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/number1"
            android:onClick="clickLevels"/>

        <ImageView
            android:id="@+id/level2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/number2"
            android:onClick="clickLevels"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_weight="2"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/level3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/number3"
            android:onClick="clickLevels"/>

        <ImageView
            android:id="@+id/level4"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/number4"
            android:onClick="clickLevels"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_weight="2"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/level5"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/number5"
            android:onClick="clickLevels"/>

        <ImageView
            android:id="@+id/level6"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/number6"
            android:onClick="clickLevels"/>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="20dp"
        android:src="@drawable/backbutton"
        app:maxImageSize="70dp"
        android:clickable="true"
        android:onClick="clickBackLevel"
        />

</LinearLayout>